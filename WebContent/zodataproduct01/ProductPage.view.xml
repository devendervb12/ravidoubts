<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zodataproduct01.ProductPage" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	          <Table items="{/ProductSet}" growingThreshold="20" growing="true">
	            <columns>
	               <Column>
	                  <Text text="Product ID"/>
	               </Column>
	               <Column>
	                  <Text text="Name"/>
	               </Column>
	               <Column>
	                  <Text text="Type Code"/>
	               </Column>
	               <Column>
	                  <Text text="Category"/>
	               </Column>
	            </columns>
	            <items>
	               <ColumnListItem>
	                  <cells>
	                     <Text text="{ProductID}"/>
	                     <Text text="{Name}"/>
	                     <Text text="{Type_Code}"/>
	                     <Text text="{Category}"/>
	                     
	                  </cells>
	               </ColumnListItem>
	            </items>
	          </Table>
		</content>
	</Page>
</core:View>